@model Loboteca.Models.InventarioLibro

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Inventario de Libro - Loboteca</title>
    <link rel="stylesheet" href="~/css/InventarioLibroes/InventarioLibroesCreate.css" />
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Crear Inventario de Libro</h2>

        <div class="form-container">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdLibro" class="control-label">Libro</label>
                    <select asp-for="IdLibro" class="form-control" asp-items="ViewBag.IdLibro"></select>
                    <span asp-validation-for="IdLibro" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaApertura" class="control-label">Fecha de Apertura</label>
                    <input asp-for="FechaApertura" class="form-control" type="date" />
                    <span asp-validation-for="FechaApertura" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaCierre" class="control-label">Fecha de Cierre</label>
                    <input asp-for="FechaCierre" class="form-control" type="date" />
                    <span asp-validation-for="FechaCierre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InventarioTipo" class="control-label">Tipo de Inventario</label>
                    <select asp-for="InventarioTipo" class="form-control">
                        <option value="Inicial">Inicial</option>
                        <option value="General">General</option>
                    </select>
                    <span asp-validation-for="InventarioTipo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="cantidadReal" class="control-label">Cantidad Real</label>
                    <input id="cantidadReal" name="cantidadReal" class="form-control" type="number" min="0" />
                </div>

                <div class="form-group">
                    <label for="observaciones" class="control-label">Observaciones</label>
                    <textarea id="observaciones" name="observaciones" class="form-control" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
