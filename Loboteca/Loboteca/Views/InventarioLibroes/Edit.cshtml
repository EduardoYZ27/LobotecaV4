@model Loboteca.Models.InventarioLibro

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Inventario de Libros - Loboteca</title>
    <link rel="stylesheet" href="~/css/InventarioLibroes/InventarioLibroesEdit.css" />
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Editar Inventario de Libros</h2>

        <div class="row formulario-altas">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="IdInventario" class="control-label">Inventario</label>
                    <select asp-for="IdInventario" class="form-control" asp-items="ViewBag.IdInventario"></select>
                    <span asp-validation-for="IdInventario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdLibro" class="control-label">Libro</label>
                    <select asp-for="IdLibro" class="form-control" asp-items="ViewBag.IdLibro"></select>
                    <span asp-validation-for="IdLibro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaApertura" class="control-label">Fecha de Apertura</label>
                    <input asp-for="FechaApertura" class="form-control" />
                    <span asp-validation-for="FechaApertura" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaCierre" class="control-label">Fecha de Cierre</label>
                    <input asp-for="FechaCierre" class="form-control" />
                    <span asp-validation-for="FechaCierre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InventarioTipo" class="control-label">Tipo de Inventario</label>
                    <input asp-for="InventarioTipo" class="form-control" />
                    <span asp-validation-for="InventarioTipo" class="text-danger"></span>
                </div>
                <div class="botones">
                    <input type="submit" value="Guardar" class="btn-success" />
                    <a asp-action="Index" class="btn-secondary">Regresar a la lista</a>
                </div>
            </form>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
