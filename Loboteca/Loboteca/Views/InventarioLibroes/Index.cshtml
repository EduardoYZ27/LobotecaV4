@model IEnumerable<Loboteca.Models.InventarioLibro>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Inventarios de Libros - Loboteca</title>
    <link rel="stylesheet" href="~/css/InventarioLibroes/InventarioLibroesIndex.css" />
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <!-- Botón Inicio añadido -->
                <li>
                    <img src="~/images/Inicio_Admin.png" alt="Inicio" class="icono">
                    <a href="@Url.Action("Admin", "Admin")">Inicio</a>
                </li>
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Lista de Inventarios de Libros</h2>

        <p>
            <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
        </p>

        <!-- Contenedor con desplazamiento horizontal -->
        <div class="table-container-scroll">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FechaApertura)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaCierre)</th>
                        <th>@Html.DisplayNameFor(model => model.InventarioTipo)</th>
                        <th>Nombre del Libro</th>
                        <th>Cantidad Real</th>
                        <th>Cantidad en Sistema</th>
                        <th>Observaciones</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="8">No hay datos disponibles.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FechaApertura)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaCierre)</td>
                                <td>@Html.DisplayFor(modelItem => item.InventarioTipo)</td>
                                <td>@item.IdLibroNavigation?.Titulo</td>
                                <td>@item.IdInventarioNavigation.CantidadReal</td>
                                <td>@item.IdInventarioNavigation.CantidadSistema</td>
                                <td>@item.IdInventarioNavigation.Observaciones</td>
                                <td>
                                   
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                                    
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>
</body>
</html>
