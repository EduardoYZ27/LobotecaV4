@model Loboteca.Models.Prestamo

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Préstamo - Loboteca</title>
    <link rel="stylesheet" href="~/css/Prestamo/PrestamoEdit.css">
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Editar Préstamo</h2>

        <div class="formulario-altas">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="FechaDePrestamo" class="control-label">Fecha de Préstamo</label>
                    <input asp-for="FechaDePrestamo" type="date" class="form-control" />
                    <span asp-validation-for="FechaDePrestamo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaDeTermino" class="control-label">Fecha de Término</label>
                    <input asp-for="FechaDeTermino" type="date" class="form-control" />
                    <span asp-validation-for="FechaDeTermino" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdAdministrador" class="control-label">Administrador</label>
                    <select asp-for="IdAdministrador" class="form-control" asp-items="ViewBag.IdAdministrador"></select>
                </div>

                <div class="form-group">
                    <label asp-for="IdLibro" class="control-label">Libro</label>
                    <select asp-for="IdLibro" class="form-control" asp-items="ViewBag.IdLibro"></select>
                </div>

                <div class="form-group">
                    <label asp-for="IdUsuario" class="control-label">Usuario</label>
                    <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                </div>

                <div class="botones">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
                </div>
            </form>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
