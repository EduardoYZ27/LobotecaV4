@model Loboteca.Models.Prestamo

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Préstamo - Loboteca</title>
    <link rel="stylesheet" href="~/css/Prestamo/PrestamoDelete.css">
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Eliminar Préstamo</h2>

        <h3>¿Estás seguro de que deseas eliminar este préstamo?</h3>

        <div class="detalle-prestamo">
            <h4>Detalles del Préstamo</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaDePrestamo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaDePrestamo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaDeTermino)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaDeTermino)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdAdministradorNavigation.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdAdministradorNavigation.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdLibroNavigation.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdLibroNavigation.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdUsuarioNavigation.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)
                </dd>
            </dl>
        </div>

        <div class="botones">
            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
            </form>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
