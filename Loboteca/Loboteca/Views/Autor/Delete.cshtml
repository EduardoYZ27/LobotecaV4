@model Loboteca.Models.Autor

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Autor - Loboteca</title>
    <link rel="stylesheet" href="~/css/Autor/AutorDelete.css" />
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">¿Seguro que quieres borrar este registro?</h2>

        <div class="row formulario-altas">
            <h4>Autor</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Nombre</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-2">Apellido Paterno</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ApellidoPaterno)</dd>

                <dt class="col-sm-2">Apellido Materno</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ApellidoMaterno)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="botones">
                    <input type="submit" value="Eliminar" class="btn-danger" />
                    <a asp-action="Index" class="btn-secondary">Regresar a la lista</a>
                </div>
            </form>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>
</body>
</html>
