@model IEnumerable<Loboteca.Models.Inventario>

<h1>Inventario</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Inventario</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cantidad Real</th>
                <th>Cantidad en Sistema</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CantidadReal</td>
                    <td>@item.CantidadSistema</td>
                    <td>@item.Observaciones</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay inventarios registrados.</p>
}
