@model Loboteca.Models.Inventario

<h1>Editar Inventario</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CantidadReal" class="control-label"></label>
        <input asp-for="CantidadReal" class="form-control" />
        <span asp-validation-for="CantidadReal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadSistema" class="control-label"></label>
        <input asp-for="CantidadSistema" class="form-control" />
        <span asp-validation-for="CantidadSistema" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observaciones" class="control-label"></label>
        <input asp-for="Observaciones" class="form-control" />
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</div>
