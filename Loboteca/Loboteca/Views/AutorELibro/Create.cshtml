@model Loboteca.Models.AutorELibro

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Autor y ELibro - Loboteca</title>
    <link rel="stylesheet" href="~/css/AutorELibro/AutorELibroCreate.css">
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Crear Autor y ELibro</h2>

        <form asp-action="Create" class="formulario-altas">
            <div class="form-group">
                <label asp-for="IdAutor" class="control-label">Autor</label>
                <select asp-for="IdAutor" class="form-control" asp-items="ViewBag.IdAutor"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdELibro" class="control-label">ELibro</label>
                <select asp-for="IdELibro" class="form-control" asp-items="ViewBag.IdELibro"></select>
            </div>
            <div class="botones">
                <input type="submit" value="Crear" class="btn-success" />
                <a asp-action="Index" class="btn-secondary">Regresar a la lista</a>
            </div>
        </form>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>
</body>
</html>
