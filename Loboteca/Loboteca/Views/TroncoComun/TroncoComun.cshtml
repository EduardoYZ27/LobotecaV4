@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libros de Tronco Común - Loboteca</title>
    <link rel="stylesheet" href="~/css/TroncoComun/troncoComun.css">
</head>
<body>

    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <!-- Aquí va el contenido adicional si es necesario -->
        </nav>

        <nav class="navbar2">
            <ul>
                <li>
                    <img src="~/images/libros.png" alt="Libros" class="icon" id="carreraMenu">
                    <a href="javascript:void(0);" onclick="toggleSubMenu()">Libros</a> <!-- Activa el submenú al hacer clic -->
                    <ul class="submenu" id="submenuCarrera">
                        <li><a href="#matematicas">Matemáticas</a></li>
                        <li><a href="#fisica">Física</a></li>
                        <li><a href="#quimica">Química</a></li>
                        <li><a href="#ciencias">Ciencias de la Computación</a></li>
                        <li><a href="#economia">Economía y Administración</a></li>
                        <li><a href="#comunicacion">Comunicación y Habilidades Blandas</a></li>
                    </ul>
                </li>
                <li><img src="~/images/sanciones.png" alt="Sanciones" class="sanciones"><a href="@Url.Action("Sanciones", "Sanciones")">sanciones</a></li>
                <li><img src="~/images/login.png" alt="Perfil" class="perfil"><a href="@Url.Action("Info_user", "Info_user")">Perfil</a></li>
            </ul>
        </nav>
    </header>

    <!-- Sección principal de libros -->
    <main class="libros-section">
        <h1>Libros Generales de Tronco Común</h1>

        <!-- Sección de categorías -->
        <section class="books-section">
            <div class="section-title">
                <h2>Libros</h2>
                <div class="carousel-container">
                    <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                    <div class="carousel">
                        @foreach (var libro in ViewBag.LibrosRecientes)
                        {
                            <div class="book">
                                <a href="@libro.Archivo" target="_blank">
                                    <img src="@libro.RutaDeImagen" alt="@libro.Titulo">
                                </a>
                                <p class="available">@libro.Estado</p>
                            </div>
                        }
                    </div>
                    <button class="next" onclick="moveCarousel(1)">&#10095;</button>
                </div>
        </section>



    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    <script>
        function toggleSubMenu() {
            var submenu = document.getElementById("submenuCarrera");
            if (submenu.style.display === "block") {
                submenu.style.display = "none";
            } else {
                submenu.style.display = "block";
            }
        }

        // Para cerrar el menú si se hace clic fuera de él
        window.onclick = function (event) {
            if (!event.target.matches('#carreraMenu') && !event.target.matches('a')) {
                var submenus = document.getElementsByClassName("submenu");
                for (var i = 0; i < submenus.length; i++) {
                    var openSubmenu = submenus[i];
                    if (openSubmenu.style.display === "block") {
                        openSubmenu.style.display = "none";
                    }
                }
            }
        }
    </script>


</body>
</html>
