@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libros de Tronco Común - Loboteca</title>
    <link rel="stylesheet" href="~/css/TroncoComun/troncoComun.css">
</head>
<body>

    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <!-- Aquí va el contenido adicional si es necesario -->
        </nav>

        <nav class="navbar2">
            <ul>
                <li>
                    <img src="~/images/libros.png" alt="Libros" class="icon" id="carreraMenu">
                    <a href="javascript:void(0);" onclick="toggleSubMenu()">Libros</a> <!-- Activa el submenú al hacer clic -->
                    <ul class="submenu" id="submenuCarrera">
                        <li><a href="#matematicas">Matemáticas</a></li>
                        <li><a href="#fisica">Física</a></li>
                        <li><a href="#quimica">Química</a></li>
                        <li><a href="#ciencias">Ciencias de la Computación</a></li>
                        <li><a href="#economia">Economía y Administración</a></li>
                        <li><a href="#comunicacion">Comunicación y Habilidades Blandas</a></li>
                    </ul>
                </li>
                <li><img src="~/images/sanciones.png" alt="Sanciones" class="sanciones"><a href="@Url.Action("Sanciones", "Sanciones")">sanciones</a></li>
                <li><img src="~/images/login.png" alt="Perfil" class="perfil"><a href="@Url.Action("Info_user", "Info_user")">Perfil</a></li>
            </ul>
        </nav>
    </header>

    <!-- Sección principal de libros -->
    <main class="libros-section">
        <h1>Libros Generales de Tronco Común</h1>

        <!-- Sección de categorías -->
        <section class="categoria" id="matematicas">
            <h2>Matemáticas</h2>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                <div class="carousel">
                    @foreach (var libro in ViewBag.LibrosMatematicas)
                    {
                        <div class="book">
                            <img src="@libro.RutaImagen" alt="@libro.Titulo">
                            <p class="available">@libro.Estado</p>
                            <button class="read-button" onclick="window.open('@libro.Archivo', '_blank')">Leer Libro</button>
                        </div>
                    }
                </div>
                <button class="next" onclick="moveCarousel(1)">&#10095;</button>
            </div>
        </section>

        <section class="categoria" id="fisica">
            <h2>Física</h2>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                <div class="carousel">
                    @foreach (var libro in ViewBag.LibrosFisica)
                    {
                        <div class="book">
                            <img src="@libro.RutaImagen" alt="@libro.Titulo">
                            <p class="available">@libro.Estado</p>
                            <button class="read-button" onclick="window.open('@libro.Archivo', '_blank')">Leer Libro</button>
                        </div>
                    }
                </div>
                <button class="next" onclick="moveCarousel(1)">&#10095;</button>
            </div>
        </section>

        <section class="categoria" id="quimica">
            <h2>Química</h2>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                <div class="carousel">
                    @foreach (var libro in ViewBag.LibrosQuimica)
                    {
                        <div class="book">
                            <img src="@libro.RutaImagen" alt="@libro.Titulo">
                            <p class="available">@libro.Estado</p>
                            <button class="read-button" onclick="window.open('@libro.Archivo', '_blank')">Leer Libro</button>
                        </div>
                    }
                </div>
                <button class="next" onclick="moveCarousel(1)">&#10095;</button>
            </div>
        </section>

        <section class="categoria" id="economia">
            <h2>Economía y Administración</h2>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                <div class="carousel">
                    @foreach (var libro in ViewBag.LibrosEconomia)
                    {
                        <div class="book">
                            <img src="@libro.RutaImagen" alt="@libro.Titulo">
                            <p class="available">@libro.Estado</p>
                            <button class="read-button" onclick="window.open('@libro.Archivo', '_blank')">Leer Libro</button>
                        </div>
                    }
                </div>
                <button class="next" onclick="moveCarousel(1)">&#10095;</button>
            </div>
        </section>

        <section class="categoria" id="comunicacion">
            <h2>Comunicación y Habilidades Blandas</h2>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                <div class="carousel">
                    @foreach (var libro in ViewBag.LibrosComunicacion)
                    {
                        <div class="book">
                            <img src="@libro.RutaImagen" alt="@libro.Titulo">
